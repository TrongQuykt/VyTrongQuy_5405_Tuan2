@model IEnumerable<VyTrongQuy_5405_Tuan2.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div style="background: #888888">
<h2 style="text-align: center">Products</h2>
@* <button asp-action="Create" style="width: 120px; border-radius: 5px; background: #33CC66">Create New</button> *@
<table class="table">
    <thead>
        <tr>
             <th>ID</th>
             <th>Name</th>
             <th>Price</th>
             <th>Description</th>
             <th>Category</th>
             <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
     <tr>
         <td>@product.Id</td>
         <td>@product.Name</td>
         <td>@product.Price</td>
         <td>@product.Description</td>
         <td>@product.CategoryId</td>
         <td>     
            <a asp-action="Display" asp-route-id="@product.Id" style="background: #00FF66; text-decoration: none; color: #000; border-radius: 5px; border: 2px solid #000; padding: 5px 20px;">View</a>
            |
            <a asp-action="Update" asp-route-id="@product.Id" style="background: #FFFF33; text-decoration: none; color: #000; border-radius: 5px; border: 2px solid #000; padding: 5px 20px;">Edit</a>
            |
            <a asp-action="Delete" asp-route-id="@product.Id" style="background: #FF0000; text-decoration: none; color: #000; border-radius: 5px; border: 2px solid #000; padding: 5px 20px;">Delete</a>
         </td>
    </tr>
    }
    </tbody>
</table>

</div>
<a href="@Url.Action("Add", "Product")" style="background: #00FF66; text-decoration: none; color: #000; border-radius: 5px; border: 2px solid #000; padding: 5px 20px;">Add New Product</a>